{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "_comment": "Fixes intellisense around importing using vite alias, when it isn't automatically found...",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "client/src/*"
      ]
    },
    "include": [
      "vite.config.ts",
      "client/**/*.ts",
      "server/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
}