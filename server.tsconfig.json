{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "Node",
    "outDir": "./dist/server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "_/*": ["server/src/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
